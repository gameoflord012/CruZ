<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net8.0</TargetFramework>
	</PropertyGroup>
	<ItemGroup>
		<ProjectReference Include="..\..\..\CruZ.Engine\CruZ.DesktopGL\CruZ.DesktopGL.csproj" />
	</ItemGroup>
	<Import Project="..\AnimalGang.Shared\AnimalGang.Shared.projitems" Label="Shared" />

	<Target Name="PreBuild" BeforeTargets="PreBuildEvent">
		<Exec Command="CruZ.Tool.ResourceImporter.exe -r $(ProjectDir)..\AnimalGang.Shared\res -build" />
	</Target>

	<ItemGroup>
		<None Include="..\AnimalGang.Shared\res\**">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>
</Project>